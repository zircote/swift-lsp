{
  "description": "Swift development hooks for automated formatting, linting, building, and testing",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/swift-hooks.sh\"",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
